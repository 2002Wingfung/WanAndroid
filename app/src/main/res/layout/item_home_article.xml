<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_selector"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/top"
        android:text=""
        android:textColor="#ff0000"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_zh_cn"
        android:text="类别:"
        android:textSize="15sp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="@id/top"
        app:layout_constraintStart_toEndOf="@id/top" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/category"
        android:textColor="@color/blue"
        android:layout_marginStart="2dp"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="1dp"
        android:ellipsize="end"
        android:text="@string/str_category"
        app:layout_constraintTop_toTopOf="@id/category_zh_cn"
        app:layout_constraintStart_toEndOf="@id/category_zh_cn" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_zh_cn"
        android:layout_marginEnd="2dp"
        android:textSize="15sp"
        android:text="时间:"
        app:layout_constraintTop_toTopOf="@id/category_zh_cn"
        app:layout_constraintEnd_toStartOf="@id/time" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="1dp"
        android:textColor="@color/blue"
        android:text="1天前"
        app:layout_constraintTop_toTopOf="@id/category_zh_cn"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="题目12311111111111231231111111111111111111111111"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/top"
        app:layout_constraintStart_toStartOf="@id/top" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author_zh_cn"
        android:text="作者:"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/top" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/author"
        android:layout_marginStart="5dp"
        android:text="author"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/author_zh_cn" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="5"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="19sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/likes"
        android:layout_width="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="3dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_likes_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>